[Unit]
Description=Simons AI Backend (AN-FOR-NO-ASSHOLES)
Documentation=https://github.com/itsimonfredlingjack
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
WorkingDirectory=/home/ai-server/AN-FOR-NO-ASSHOLES/02_SIMONS-AI-BACKEND
Environment="PATH=/home/ai-server/AN-FOR-NO-ASSHOLES/02_SIMONS-AI-BACKEND/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/ai-server/AN-FOR-NO-ASSHOLES/02_SIMONS-AI-BACKEND/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Graceful shutdown
TimeoutStopSec=30
KillMode=mixed

[Install]
WantedBy=default.target
